<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/products.css">
    <title>Produtos</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark" id="nav">
        <a class="navbar-brand" href="/">
            <img class="home" src="/img/home.png">
        </a>
        <a class="navbar-brand" href="/login">Login</a>
    </nav>
    <div class="container">
        <br>
        <h1>Listagem de Produtos</h1>
        <br>
        <label style="color: rgb(0, 0, 0);font-size: 20px;">Procure um produto</label>
            <form method="post" style="display:inline;" action="/search/product">
                <input type="text" name="id" placeholder="search a product" class="form-control"/>
                <br/>
                <button class="btn btn-warning">Pesquisar</button>
            </form>
            <hr>
        <div class="card">
            <table class="table b">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>ID da Categoria</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Preço</th>
                    <th>Quantidade Vendida</th>
                    <th>Quantidade Disponível</th>
                    <th>Link</th>
                </tr>
                </thead>
                <tbody>
                <% products.forEach((product) => { %>
                    <tr>
                    <td><%= product.id %></td>
                    <td><%= product.category_id %></td>
                    <td><%= product.title %></td>
                    <td><%= product.slug %></td>
                    <td><%= product.price %></td>
                    <td><%= product.sold_quantity %></td>
                    <td><%= product.available_quantity %></td>
                    <td>
                        <a class="btn btn-dark" href="<%= product.permalink %>">Ver Produto</a>
                    </td>
                    </tr>
                <% });%>
               
                </tbody>
            </table>
        </div>
        <hr/>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
